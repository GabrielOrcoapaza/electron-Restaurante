{
  "name": "appsuma",
  "private": false,
  "version": "1.0.5",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build-electron": "tsc -p tsconfig.electron.json",
    "electron": "tsc -p tsconfig.electron.json && electron dist-electron/main.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev:all": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "dist": "npm run build && npm run build-electron && electron-builder",
    "release": "npm run dist -- --publish always"
  },
  "build": {
    "appId": "com.mirestaurante.restaurante",
    "productName": "Restaurantes",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GabrielOrcoapaza", 
        "repo": "electron-Restaurante"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/logos.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
